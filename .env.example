# Infura API Configuration
# CRITICAL: Must be allowlisted by Infura for eth_sendBundle on Linea
VITE_INFURA_API_KEY=your-allowlisted-infura-api-key-here

# Linea Network Configuration
VITE_LINEA_RPC_URL=https://linea-mainnet.infura.io/v3/
VITE_LINEA_CHAIN_ID=59144

# Token Contract Addresses (UPDATE WHEN LINEA TOKEN LAUNCHES)
# Currently using placeholder - must be updated when LINEA token claim contract is deployed
VITE_LINEA_TOKEN_CONTRACT=0x0000000000000000000000000000000000000000
VITE_LINEA_CLAIM_CONTRACT=0x0000000000000000000000000000000000000000

# Claim Mode Configuration (choose ONE mode)
# 1. Auto-detection from API (when available)
VITE_USE_AUTO_DETECTION=false
VITE_LINEA_ALLOCATION_API_URL=https://api.linea.build/allocations

# 2. User inputs specific amount to claim
VITE_USE_USER_INPUT_AMOUNT=true

# 3. Claim all available tokens (no amount needed)
VITE_USE_CLAIM_ALL_MODE=false

# 4. Merkle proof based claiming (for airdrops)
VITE_USE_MERKLE_PROOF_MODE=false
VITE_MERKLE_PROOF_API_URL=https://api.linea.build/merkle-proofs

# Gas Settings
VITE_DEFAULT_GAS_PRICE_GWEI=20
VITE_MAX_GAS_PRICE_GWEI=100
VITE_GAS_MULTIPLIER=1.2

# Security Settings
VITE_MAX_CLAIM_AMOUNT=1000000
VITE_BUNDLE_VALIDITY_SECONDS=120
VITE_MAX_RETRY_ATTEMPTS=3

# Development Settings
VITE_ENABLE_DEBUG_LOGGING=false
VITE_TEST_MODE=false