# 🔑 REQUIRED: Infura API Key for Linea Mainnet
VITE_INFURA_API_KEY=example

# 📋 LIVE CONTRACT ADDRESSES (Thirdweb Airdrop Contract)
VITE_LINEA_CLAIM_CONTRACT=example
VITE_LINEA_TOKEN_CONTRACT=example

# 📍 Linea Network Configuration
VITE_LINEA_RPC_URL=https://linea-mainnet.infura.io/v3/
VITE_LINEA_CHAIN_ID=59144

# 🌳 Merkle Tree Configuration (LIVE DEMONSTRATION)
VITE_MERKLE_ROOT=example

# 🎯 Demo Wallet Addresses (for testing only - users input their own wallets)
VITE_DEMO_WALLET_1=example
VITE_DEMO_WALLET_2=example

# 🎯 Claim Configuration (Enable Merkle Proof Mode for Live Demo)
VITE_USE_MERKLE_PROOF_MODE=true
VITE_USE_AUTO_DETECTION=false
VITE_USE_USER_INPUT_AMOUNT=false
VITE_USE_CLAIM_ALL_MODE=false

# ⚡ Gas Settings (Linea is cheap!)
VITE_DEFAULT_GAS_PRICE_GWEI=1
VITE_GAS_MULTIPLIER=1.2
VITE_MAX_GAS_PRICE_GWEI=50

# 📊 Claim Settings
VITE_MAX_CLAIM_AMOUNT=100000
VITE_DEFAULT_CLAIM_AMOUNT=1250

# 🔄 Bundle Transaction Settings
VITE_BUNDLE_VALIDITY_SECONDS=120
VITE_MAX_RETRY_ATTEMPTS=3

# 🛠️ Development Settings
VITE_ENABLE_DEBUG_LOGGING=true
VITE_TEST_MODE=false